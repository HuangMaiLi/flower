.hot_shop {
  background: #eee;
}
.hot_shop .shop_list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0 15rpx;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.hot_shop .shop_list .shop_item {
  width: 750rpx;
  margin-bottom: 15rpx;
  background: #fff;
  padding: 10px;
  box-sizing: border-box;
}
.hot_shop .shop_list .shop_item swiper {
  height: 320rpx;
  width: 100%;
}
.hot_shop .shop_list .shop_item swiper swiper-item image {
  height: 320rpx;
  width: 100%;
}
.hot_shop .shop_list .shop_item .word1 {
  width: 640rpx;
  margin-left: 10px;
}
.hot_shop .shop_list .shop_item .word1 .name {
  margin-top: 40px;
  padding-bottom: 10px;
  font-size: 48rpx;
  display: block;
  border-bottom: 1px solid #C0C0C0;
}
.hot_shop .shop_list .shop_item .word1 .address {
  padding-top: 10px;
  padding-bottom: 10px;
  font-size: 32rpx;
  display: block;
  border-bottom: 1px solid #C0C0C0;
}
.hot_shop .shop_list .shop_item .word1 .time {
  padding-top: 10px;
  padding-bottom: 10px;
  font-size: 32rpx;
